{
  "manifest_version": 3,
  "name": "Work Timer - Productivity Tracker",
  "version": "1.0.0",
  "description": "Track your work time, block distractions, and stay focused with smart reminders.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "app/background/background.js"
  },
  "action": {
    "default_popup": "app/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app/content/content.js"],
      "css": ["app/content/content.css"],
      "run_at": "document_end"
    }
  ]
}
